<% provide(:title, 'Nueva acta del proyecto ' + @project.name) %>
<div>
  <%= render 'projects/header' %>
  <h2>Nueva acta</h2>
  <%= form_for [@project, @record], html: {class: 'form-horizontal'} do |f| %>
  <div class='form-group'>
    <%= f.label :date, 'Fecha', class: 'col-sm-2 control-label'%>
    <div class='col-sm-4'>
      <%= f.date_field :date, class: 'form-control' %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label :attendants, 'Asistentes', class: 'col-sm-2 control-label'%>
    <div class='col-sm-4'>
      <%= f.collection_check_boxes :attendants, @project.users, :id, :name do |b|%>
        <div class='checkbox'>
          <%=b.label(:"data-value" => b.value) { b.check_box(class: 'checkbox_input') + b.text}%>
        </div>
        <%end%>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :secretary_id, 'Secretario(a)', class: 'col-sm-2 control-label'%>
    <div class='col-sm-4'>
      <%= f.collection_select :secretary_id, @project.users, :id, :name, {},  {class: 'form-control'} %>
    </div>
  </div>
  <div class='form-group'>

  </div>
  <div class='form-group'>
  </div>
  <div class='form-group'>
  </div>
  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <button type='submit' class='btn btn-primary'>Crear</button>
    </div>
  </div>
  <% end %>
</div>