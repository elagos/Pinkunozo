<% provide(:title, 'Actas del proyecto ' + @project.name) %>
<div>
  <%= render 'projects/header' %>
  <%= grid(@records_grid) do |g|
      g.column :name => 'Fecha', :attribute => 'date' do |task|
        task.date
      end

      g.column :name => 'Secretario', :attribute => 'secretary_id' do |task|
        task.secretary.name
      end
    end -%>
</div>