      <%= f.label :name, 'Nombre', class: 'col-sm-1 control-label'%>
      <div class='col-sm-11'>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :description, 'DescripciÃ³n', class: 'col-sm-1 control-label'%>
