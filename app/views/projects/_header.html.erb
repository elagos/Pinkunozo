<div>
  <h1><%= @project.name %></h1>
  <div class='row'>
    <div class='col-sm-11'>
      <%= @project.description %>
    </div>
    <div class='col-sm-1'>
      <%= link_to 'Editar', edit_project_path(@project), class: 'btn btn-default edit-project-button' %>
    </div>
  </div>
  <div class="project-nav btn-group btn-group-justified">
      <%= link_to 'Actas', project_acts_path(@project),
                  :class => (current_page?(project_acts_path(@project))) ?
                          'btn btn-default active' : 'btn btn-default',
                  id: 'actas' %>
      <%= link_to 'Síntesis díalogica', project_milestones_path(@project,wice_grid_custom_filter_params(
                                                                        grid_name: 'grid',
                                                                        attribute: 'users.id',
                                                                        value: current_user.id  )),
                  :class => (current_page?(project_milestones_path(@project))) ?
                          'btn btn-default active' : 'btn btn-default',
                  id: 'sintesis' %>
      <%= link_to 'Reportes de gestión', project_reports_path(@project),
                  :class => (current_page?(project_reports_path(@project))) ?
                          'btn btn-default active' : 'btn btn-default',
                  id: 'reportes' %>
  </div>
</div>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick"%>