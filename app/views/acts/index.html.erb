<% provide(:title, 'Actas del proyecto ' + @project.name) %>
<div>
  <%= render 'projects/header' %>
  <%= grid(@records_grid) do |g|
      g.column :name => 'Fecha', :attribute => 'date' do |record|
        record.date
      end

      g.column :name => 'Secretario', :attribute => 'secretary_id' do |record|
        record.secretary.name
      end

      g.column :name => 'Temas' do |record|
        record.number_of_topics 
      end
    end -%>

  <%= link_to "Nueva acta", new_project_act_path(@project), class: "btn btn-primary" %>
</div>