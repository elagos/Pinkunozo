    <%= render 'projects/header' %>
    <div class="well">
      <div class='row'>
        <div class='col-sm-6'>
          <h2>Compromisos seg√∫n estado</h2>
          <%= column_chart @commitments.group(:status).count, colors: ["pink"] %>
